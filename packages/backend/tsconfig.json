{
    "compilerOptions": {
        "target": "es2022",
        "baseUrl": "./src",
        "paths": {
            "src/*": ["./*"],
            "contracts/*": ["../../contracts/*"]
        },
        "lib": ["es2023"],
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": false,
        "strict": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js"],
    "exclude": ["node_modules"]
}
